@model User_MVC_Docker.DTO.UserDTO
@{
    ViewBag.Title = "create";
}
<div class="row my-2">
    <h2 style="
    justify-content: center;
    align-items: center;
    display: flex;
">
        Create User
    </h2>
</div>
@if (TempData["exception"] is not null)
{
    <div class="alert alert-danger text-center">
        @TempData["exception"]
    </div>
}
<form asp-action="CreateUser" asp-controller="User" method="post">
    <div class="row col-4">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="row col-4">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="row col-4">
        <label asp-for="Country" class="form-label">Country</label>
        <input asp-for="Country" class="form-control" type="text" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="row col-4">
        <label asp-for="Age" class="form-label">Age</label>
        <input asp-for="Age" class="form-control" type="number" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="row col-4">
        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" type="text" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="my-2">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>
